<div class='container'>
  <div class='float-right'>
    <%= link_to 'Back', articles_path, class: 'btn' %>
  </div>
  <%= form_with model: @article, class: 'form-vertical', local: true do |form| %>
 
    <%= render 'shared/errors' %>
   
    <p class='form-group'>
      <%= form.label :title, class: 'label' %><br>
      <%= form.text_field :title, class: 'form-control' %>
    </p>
   
    <p class='form-group'>
      <%= form.label :text, class: 'label' %><br>
      <%= form.text_area :text, class: 'form-control' %>
    </p>
   
    <p class='form-group'>
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    </p>
   
  <% end %>
</div>