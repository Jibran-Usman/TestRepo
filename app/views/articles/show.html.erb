<div class='container'>
	<div class='float-right'>
  	<%= link_to 'Edit', edit_article_path(@article), class: 'btn' %>
  	<%= link_to 'Back', articles_path, class: 'btn' %>
	</div>

	<div class='row text-center'>
		<div class='col'>
  		<p>
    		<strong>Title:</strong>
    		<%= @article.title %>
  		</p>
 
  		<p>
    		<strong>Text:</strong>
    		<%= @article.text %>
  		</p>
		</div>
	</div>
 
	<h2>Comments</h2>
	<%= render @article.comments %>
 
	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>
</div>