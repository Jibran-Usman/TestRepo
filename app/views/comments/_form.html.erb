<div class='container'>
  <%= form_with(model: [ @article, @article.comments.build ], class: 'form-vertical', local: true) do |form| %>
    <p class='form-group'>
      <%= form.label :commenter %><br>
      <%= form.text_field :commenter, class: 'form-control' %>
    </p>
    <p class='form-group'>
      <%= form.label :body %><br>
      <%= form.text_area :body, class: 'form-control' %>
    </p>
    <p class='form-group'>
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    </p>
  <% end %>
</div>